.filter_section
  %h4 Kategorien
  %div{ ng_repeat: "category in categories"}
    %input{ type: 'checkbox', ng_model: 'selected_categories[category.id]', ng_disabled: "isCurrentContribution" }
      .category-color{ ng_style: "{'background-color': category.color}"}
      {{ category.id }}
.filter_section
  %h4 Aktivit√§ten
  %div{ ng_repeat: "activity in activities"}
    %input{ type: 'checkbox', ng_model: 'selected_activities[activity.id]', ng_disabled: "isCurrentContribution" }
      .maki-icon{ class: "{{activity.icon}}"}
      {{ activity.id }}
.filter_section
  %h4 Inhalte
  %div{ ng_repeat: "content in contents"}
    %input{ type: 'checkbox', ng_model: 'selected_contents[content.id]', ng_disabled: "isCurrentContribution" }
      {{ content.id }}
